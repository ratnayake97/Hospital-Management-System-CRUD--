<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#E8F5E9"
    android:orientation="vertical"
    app:layout_marginBaseline="12dp"
    android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#E8EAF6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/p_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:fontFamily="@font/acme"
                android:text="1"
                android:textColor="@color/purple_700"
                android:textSize="35sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/p_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/baloo"
                android:text="Name1"
                android:textColor="#13265E"
                android:textSize="24sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/p_id_txt"
                app:layout_constraintTop_toTopOf="@+id/p_id_txt" />

            <TextView
                android:id="@+id/p_contact_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:text="Number1"
                android:textColor="#9FA8DA"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/p_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/p_name_txt" />

            <TextView
                android:id="@+id/p_ward_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="44dp"
                android:fontFamily="@font/baloo"
                android:text="TextView"
                android:textColor="#9FA8DA"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>